{
  "name": "pipol-demo",
  "version": "0.1.0",
  "description": "Pipol demo for Celo Blockchain",
  "main": "index.js",
  "repository": "git@bitbucket.org:cryptopipol/pipol-demo.git",
  "author": "Matías Barrios",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "jest",
    "start": "nodemon --watch .env --watch src --exec babel-node src --source-maps",
    "debug": "DEBUG='demo::*' nodemon --watch .env --watch src --exec babel-node src --source-maps",
    "debug:mongo": "DEBUG='demo::mongo' nodemon --watch .env --watch src --exec babel-node src --source-maps",
    "debug:express": "DEBUG='demo::express' nodemon --watch .env --watch src --exec babel-node src --source-maps",
    "debug:app:start": "DEBUG='demo::app::start' nodemon --watch .env --watch src --exec babel-node src --source-maps",
    "debug:app:routes": "DEBUG='demo::app::routes' nodemon --watch .env --watch src --exec babel-node src --source-maps",
    "debug:app:controllers": "DEBUG='demo::app::controllers' nodemon --watch .env --watch src --exec babel-node src --source-maps",
    "lint": "eslint src/**/*.js --fix && echo Lint passed ❤",
    "clean": "rimraf dist && mkdir dist",
    "prebuild": "npm run clean && cp package.json yarn.lock dist",
    "build": "npm run prebuild && cross-env NODE_ENV=production babel src -D --out-dir dist --source-maps"
  },
  "dependencies": {
    "@babel/runtime": "^7.4.5",
    "@celo/contractkit": "^0.2.4",
    "@feathersjs/errors": "3.3.6",
    "@hapi/joi": "^16.1.7",
    "app-root-path": "^3.0.0",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "consola": "^2.11.0",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-api-responder": "^1.1.1",
    "express-validator": "^6.3.0",
    "helmet": "^3.21.2",
    "method-override": "^3.0.0",
    "mongoose": "^5.7.13",
    "morgan": "^1.9.1",
    "ms": "^2.1.2",
    "pino": "^5.13.6",
    "pino-pretty": "^3.4.0",
    "supertest": "^4.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.6.0",
    "@babel/node": "^7.4.5",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "babel-eslint": "^10.0.3",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-preset-minify": "^0.5.1",
    "cross-env": "^6.0.3",
    "eslint": "^6.3.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-unicorn": "^10.0.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "nodemon": "^1.19.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
